variable	A string "example_NiGB"
print		$A

variable        eLambda       equal 0.0251
variable        Kmax          equal 0.85
variable        Zone0         equal 0
variable        Zone1         equal 0
variable        Zone2         equal 0
variable        eRes0         equal 1
variable        eRes1         equal .25
variable        eRes2         equal .25
variable        dR_Ewald      equal 0.02


variable        xLambda       equal 1.541838
variable        xASFfile      string "ASF_Ni.txt"
variable        ThetaMin      equal 20.0
variable        ThetaMax      equal 90.0
variable        xRes0         equal 2
variable        xRes1         equal 2
variable        xRes2         equal 2
variable        LP            equal 1
variable        ThetaLo       equal ${ThetaMin}*3.14159/360
variable        ThetaHi       equal ${ThetaMax}*3.14159/360
variable        Nbins         equal 250

timestep        0.001

### Read restart data and set up simulation
atom_modify     map array sort 0 0.0

read_data       Ni61_400K_0.005eV_0.data
pair_style      none
mass    	* 1

# Assign Groups
group           LGB type 1
group           RGB type 2
group           MGB type 3
group           LEd type 4
group           REd type 5
group           GB union LGB RGB MGB


# Compute/print SAED 

compute         SAED all saed ${eLambda} 28 28 28 28 28 Kmax ${Kmax} & 
                Zone ${Zone0} ${Zone1} ${Zone2} c ${eRes0} ${eRes1} ${eRes2} &
                dR_Ewald ${dR_Ewald} echo

fix             2 all ave/time/saed 1 1 1   c_SAED & 
                file $A_${Zone0}${Zone1}${Zone2}.saed mode vector  &
                Kmax ${Kmax}  Zone ${Zone0} ${Zone1} ${Zone2} c ${eRes0} ${eRes1} ${eRes2} &
                dR_Ewald ${dR_Ewald} lambda ${eLambda}
    
compute         XRD all xrd ${xASFfile} lambda ${xLambda} 2Theta ${ThetaMin} &
                ${ThetaMax} c ${xRes0} ${xRes1} ${xRes2} LP ${LP}


fix             4 all ave/histo 1 1 1  ${ThetaLo} ${ThetaHi} &
                ${Nbins} c_XRD[1] mode vector weights c_XRD[2] file $A.xrd



timestep        0.001

run             0
